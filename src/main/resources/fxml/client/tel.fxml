<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.textfield.CustomTextField?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="io.github.dnloop.inventorycom.controller.clients.Phone">
    <left>
        <Pane prefHeight="200.0" prefWidth="25.0" BorderPane.alignment="CENTER"/>
    </left>
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu mnemonicParsing="false" text="Archivo">
                <accelerator>
                    <KeyCodeCombination alt="DOWN" code="A" control="UP" meta="UP" shift="UP" shortcut="UP"/>
                </accelerator>
                <MenuItem fx:id="miSave" mnemonicParsing="false" onAction="#save" text="Guardar">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="G" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                    </accelerator>
                </MenuItem>
                <MenuItem fx:id="miExit" mnemonicParsing="false" onAction="#exit" text="Salir">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="X" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                    </accelerator>
                </MenuItem>
            </Menu>
            <Menu fx:id="miHelp" mnemonicParsing="false" text="Ayuda">
                <accelerator>
                    <KeyCodeCombination alt="DOWN" code="H" control="UP" meta="UP" shift="UP" shortcut="UP"/>
                </accelerator>
            </Menu>
        </MenuBar>
    </top>
    <bottom>
        <Pane prefHeight="25.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
    </bottom>
    <right>
        <Pane prefHeight="200.0" prefWidth="25.0" BorderPane.alignment="CENTER"/>
    </right>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <TableView fx:id="tvPhone" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn prefWidth="75.0" text="Telefono"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <VBox.margin>
                    <Insets bottom="10.0" top="20.0"/>
                </VBox.margin>
            </TableView>
            <HBox>
                <VBox.margin>
                    <Insets top="15.0"/>
                </VBox.margin>
                <CustomTextField fx:id="txtAdd" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </CustomTextField>
                <Button fx:id="btnAdd" alignment="CENTER_RIGHT" defaultButton="true" mnemonicParsing="false"
                        onAction="#addPhone" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                    <graphic>
                        <FontAwesomeIconView glyphName="PLUS"/>
                    </graphic>
                    <tooltip>
                        <Tooltip text="Añadir Teléfono"/>
                    </tooltip>
                </Button>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnDel" mnemonicParsing="false" onAction="#removePhone"
                        style="-fx-background-radius: 5 0 0 5;">
                    <graphic>
                        <FontAwesomeIconView glyphName="REMOVE"/>
                    </graphic>
                    <tooltip>
                        <Tooltip text="Eliminar registro."/>
                    </tooltip>
                </Button>
                <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#editPhone"
                        style="-fx-background-radius: 0;">
                    <graphic>
                        <FontAwesomeIconView glyphName="EDIT"/>
                    </graphic>
                    <tooltip>
                        <Tooltip text="Editar registro."/>
                    </tooltip>
                </Button>
                <Button fx:id="btnDelAll" mnemonicParsing="false" onAction="#removeAll"
                        style="-fx-background-radius: 0 5 5 0;">
                    <graphic>
                        <FontAwesomeIconView glyphName="TRASH" textAlignment="JUSTIFY"/>
                    </graphic>
                    <tooltip>
                        <Tooltip text="Eliminar todos los registros."/>
                    </tooltip>
                </Button>
            </HBox>
        </VBox>
    </center>
</BorderPane>
